;--------------------------------------------
; colors                                    ;
;--------------------------------------------

[colors]

;----- bspwm -----;

	background-alt = #4e5460
	foreground-alt = #212830
	primary = #ffb52a
	secondary = #e60053
	alert = #bd2c40

;----- general -----;

	background			= #2e3440
	foreground			= #111820
	
	black	= #111820
	
	red	= #bf616a
	green	= #a3be8c
	yellow	= #ebcb8b
	orange	= #d08770
	pink	= #b48ead
	purple	= #946ead
	blue	= #5e81ac
	cyan	= #88C0D0

;--------------------------------------------
; bars                                      ;
;--------------------------------------------

[bar/main]
	;monitor = ${env:MONITOR:HDMI-1}
	width = 100%
	height = 20
	;offset-x = 1%
	;offset-y = 1%
	radius = 0.0
	fixed-center = false

	background = ${colors.background}
	foreground = ${colors.foreground}

	line-size = 3
	line-color = #f00

	border-size = 0
	border-color = #00000000

	padding-left = 0
	padding-right = 2

	module-margin-left = 0
	module-margin-right = 0

	font-0 = tewi:pixelsize=10;1
	font-1 = FontAwesome:size=12;2
	font-2 = Iosevka Nerd Font:size=15;4

	modules-left = bspwm arrow-win-tail
	modules-right = arrow-red filesystem arrow-orange memory arrow-yellow cpu arrow-green battery arrow-cyan wlan eth arrow-blue temperature arrow-pink date arrow-tail

	tray-position = right
	tray-padding = 2
	;tray-transparent = true
	;tray-background = #0063ff

	;wm-restack = bspwm

	override-redirect = true
	enable-ipc = true

	;scroll-up = bspwm-desknext
	;scroll-down = bspwm-deskprev

	cursor-click = pointer
	cursor-scroll = ns-resize

;-------------------------------------------
; arrows                                   ;
;-------------------------------------------

[module/arrow-red]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.red}
	content-background = ${colors.background}

[module/arrow-orange]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.orange}
	content-background = ${colors.red}

[module/arrow-yellow]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.yellow}
	content-background = ${colors.orange}

[module/arrow-green]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.green}
	content-background = ${colors.yellow}
	
	[module/arrow-cyan]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.cyan}
	content-background = ${colors.green}

[module/arrow-blue]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.blue}
	content-background = ${colors.cyan}

[module/arrow-pink]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.pink}
	content-background = ${colors.blue}
	
[module/arrow-tail]
	type = custom/text
	content = "%{T3} %{T-}"
	content-foreground = ${colors.background}
	content-background = ${colors.pink}
	
[module/arrow-win-tail]
	type = custom/text
	content = "%{T3} %{T-}"
